
<%= form_for(@comment, url: topic_post_comments_path(@topic, @post, @comment), html: { id: "comment-create-form" }) do |f| %>
  <h1 class="text-center">
    Create Comment Title
  </h1>

<div class="form-group">
  <h4> <%= f.label :text_field, "Body" %> </h4>
  <%= f.text_field :body, id: "comment_body_field", class: 'form-control' %>
</div>

<div class="form-group text-center">
  <%= f.submit "Create Comment Button", class: "btn btn-success btn-lg" %>
</div>

<% end %>
