<div class="modal fade" id="login-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">

        <%= form_for(:user, url: sessions_path, html: { id: "session-create-form" }) do |f| %>
        <h1 class="text-center">
          Login
        </h1>

        <div class="form-group">
          <h4> <%= f.label :title_field, "email" %> </h4>
          <%= f.text_field :email, required: true, id: "email_field", class: 'form-control' %>
        </div>

        <div class="form-group">
          <h4> <%= f.label :text_field, "password" %> </h4>
          <%= f.password_field :password, id: "password_digest_field", class: 'form-control' %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "Login", class: "btn btn-success btn-lg" %>
        </div>

        <% end %>

        <h4 class="text-center">
          <%= link_to "I forgot my password", new_password_reset_path %>
        </h4>

        <h4 class="text-center">
          <%= link_to "I don't have an account yet", new_user_path %>
        </h4>


      </div>
    </div>
  </div>
</div>
