<h1 class="post-title text-center">Post</h1>
<p>
<h1 class="text-center">
  <%= link_to "Back to Topic", topics_path, class: "btn btn-success btn-lg" %>

  <%= link_to "New Posts", new_topic_post_path(@topic), class: "btn btn-success btn-lg" %>
</h1>


<div class="post-parent">
  <% @posts.each do |post| %>
    <div class="post-child text-center">
      <h3><%= post.title %></h3>
      <h5><%= post.body %></h5>
      <%= image_tag post.image %>
      <p><p>
      <%= link_to "Read Comments", topic_post_comments_path(@topic, post) %>
      <p><p>
        <%= link_to "Edit", edit_topic_post_path(@topic, post), class: "btn btn-success" %>

        <%= link_to "Delete", topic_post_path(@topic, post), class: "btn btn-danger", method: :delete, data: { confirm: "Delete?" } %>
    </div>
  <% end %>
</div>
<div class="text-center">
  <%= paginate @posts, :window => 1, :outer_window => 1 %>
</div>
