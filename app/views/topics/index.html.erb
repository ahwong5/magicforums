<h1 class="topic-title text-center">Topics of Forum</h1>
<p>
<h1 class="text-center">
  <% @topic %>
  <%= link_to "New Topic", new_topic_path(@topic), class: "btn btn-success btn-lg" %>
</h1>


<div class="topic-parent">
  <% @topics.each do |topic| %>
    <div class="topic-child text-center">


      <h3><%= topic.title %></h3>
      <h5><%= topic.description %></h5>
      <%= link_to topic.title, topic_posts_path(topic) %>
      <p><p>

      <%= link_to "Edit", edit_topic_path(topic), class: "btn btn-success" %>
      <%= link_to "Delete", topic_path(topic), class: "btn btn-danger", method: :delete, data: { confirm: "Delete?" } %>
    </div>
  <% end %>
</div>
<div class="text-center">
  <%= paginate @topics, :window => 1, :outer_window => 1 %>
</div>
